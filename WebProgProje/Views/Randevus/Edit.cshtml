@model WebProgramlamaProje.Models.Randevu

<@{
    ViewData["Title"] = "Edit";
    var userRole = (string)ViewData["UserRole"];
}

<h1>Edit</h1>

<h4>Randevu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="RandevuId" />
            <div class="form-group">
                <label asp-for="CalisanId" class="control-label"></label>
                <select asp-for="CalisanId" class="form-control" asp-items="ViewBag.CalisanId"></select>
            </div>
            <div class="form-group">
                <label asp-for="IslemId" class="control-label"></label>
                <select asp-for="IslemId" class="form-control" asp-items="ViewBag.IslemId"></select>
            </div>
            <div class="form-group">
                <label asp-for="SalonId" class="control-label"></label>
                <select asp-for="SalonId" class="form-control" asp-items="ViewBag.SalonId"></select>
            </div>
            <div class="form-group">
                <label asp-for="KullaniciId" class="control-label"></label>
                <select asp-for="KullaniciId" class="form-control" asp-items="ViewBag.KullaniciId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Tarih" class="control-label"></label>
                <input asp-for="Tarih" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Saat" class="control-label"></label>
                <input asp-for="Saat" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="OnaylandiMi" class="control-label"></label>
                @if (userRole == "Employee" || userRole == "Admin")
                {
                    <input asp-for="OnaylandiMi" class="form-control" />
                }
                else
                {
                    <input asp-for="OnaylandiMi" class="form-control" readonly />
                }
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
