@model IEnumerable<WebProgramlamaProje.Models.Randevu>

@{
    ViewData["Title"] = "Randevular";
}

<h2>Randevular</h2>

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(r => r.First().Calisan.Ad)</th>
            <th>@Html.DisplayNameFor(r => r.First().Islem.Ad)</th>
            <th>@Html.DisplayNameFor(r => r.First().Kullanici.Email)</th>
            <th>@Html.DisplayNameFor(r => r.First().Tarih)</th>
            <th>@Html.DisplayNameFor(r => r.First().Saat)</th>
            <th>@Html.DisplayNameFor(r => r.First().OnaylandiMi)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Calisan?.Ad @item.Calisan?.Soyad</td>
                <td>@item.Islem?.Ad</td>
                <td>@item.Kullanici?.Email</td>
                <td>@Html.DisplayFor(modelItem => item.Tarih)</td>
                <td>@Html.DisplayFor(modelItem => item.Saat)</td>
                <td>@Html.DisplayFor(modelItem => item.OnaylandiMi)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RandevuId">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.RandevuId">Detaylar</a> |
                    <a asp-action="Delete" asp-route-id="@item.RandevuId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>
