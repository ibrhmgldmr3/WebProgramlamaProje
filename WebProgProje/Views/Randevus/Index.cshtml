@model IEnumerable<WebProgramlamaProje.Models.Randevu>

@{
    ViewData["Title"] = "Randevular";
}

<h2>Randevular</h2>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Calisan.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Islem.Ad)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Kullanici.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tarih)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Saat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OnaylandiMi)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Calisan.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Islem.Ad)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kullanici.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tarih)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Saat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OnaylandiMi)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.RandevuId">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@item.RandevuId">Detaylar</a> |
                    <a asp-action="Delete" asp-route-id="@item.RandevuId">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>