@model IEnumerable<WebProgramlamaProje.Models.Kullanici>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PasswordHash)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PasswordHash)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                @if (User.IsInRole("Admin")){
                <td>
                    <a asp-action="Edit" asp-route-id="@item.KullaniciId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.KullaniciId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.KullaniciId">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
@section Styles {
    <link rel="stylesheet" href="~/css/site.css" />
}
