@model WebProgramlamaProje.Models.LoginViewModel

<div class="login-container">
    <div class="login-card">
        <div class="login-header">
            <h3>Giriş Yap</h3>
        </div>
        <div class="login-body">
            <form method="post">
                <div class="form-group">
                    <label for="exampleInputEmail1" class="form-label">Email</label>
                    <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="email@example.com">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mt-3">
                    <label for="exampleInputPassword1" class="form-label">Şifre</label>
                    <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" autocomplete="off">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group mt-4 text-center">
                    <button type="submit" class="btn btn-primary">Giriş Yap</button>
                    <button type="button" class="btn btn-success">Kayıt Ol</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
