@model WebProgramlamaProje.Models.Kullanici

@{
    ViewData["Title"] = "Kaydol";
}

<div class="form-div">
    <form asp-action="Kaydolma" method="post">

    <h3>Kayıt Ol</h3>
    <fieldset>
        <div>
            <label for="exampleInput" class="form-label mt-4">Ad Soyad</label>
            <input asp-for="FullName" class="form-control" id="exampleInput" placeholder="Adınızı Soyadınızı giriniz" autocomplete="off">
            <span asp-validation-for="FullName" class="text-danger"></span>
        </div>
        <div>
            <label for="exampleInput" class="form-label mt-4">Telefon</label>
                <input asp-for="PhoneNumber" type="tel" class="form-control" id="phoneNumberInput" placeholder="05xxxxxxxxx" autocomplete="off" />
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div>
            <label for="exampleInputEmail1" class="form-label mt-4">Email</label>
            <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="email@example.com">
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div>
            <label for="exampleInputPassword1" class="form-label mt-4">Şifre</label>
                <input asp-for="PasswordHash" type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" autocomplete="off">
            <span asp-validation-for="PasswordHash" class="text-danger"></span>
        </div>
        <div class="button-group">
            <a asp-action="Login" class="btn btn-primary">Giriş Yap</a>
            <button type="submit" class="btn btn-success">Kayıt Ol</button>

        </div>
    </fieldset>
</form>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" />
}
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script src="~/js/site.js"></script>
