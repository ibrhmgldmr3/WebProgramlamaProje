@model WebProgramlamaProje.Models.Calisan

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Calisan</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Kullanici)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Kullanici.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Soyad)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Soyad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Uzmanlik)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Uzmanlik.Ad)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Salon)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Salon.Adres)
        </dd>
        <dt class="col-sm-2">
            Çalıştığı Günler
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var uygunluk in Model.CalisanUygunluklar)
                {
                    <li>@uygunluk.Gun: @uygunluk.Baslangic - @uygunluk.Bitis</li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.CalisanId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>


