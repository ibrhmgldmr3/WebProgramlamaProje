@model WebProgramlamaProje.Models.AIResult
@{
    ViewData["Title"] = "Create";
}

<h1>Create AIResult</h1>

<form asp-action="Create" enctype="multipart/form-data" method="post">
    <div class="form-group">
        <label for="KullaniciId">Kullanıcı</label>
        <select asp-for="KullaniciId" class="form-control" asp-items="ViewBag.KullaniciId"></select>
    </div>
    <div class="form-group">
        <label for="SuggestedStyle">Saç Stili Seçin</label>
        <select asp-for="SuggestedStyle" class="form-control" asp-items="ViewBag.HairStyles">
            <option value="">Bir stil seçin</option>
        </select>
        <span asp-validation-for="SuggestedStyle" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="uploadedFile">Resim Yükle</label>
        <input type="file" name="uploadedFile" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Gönder</button>
</form>

@if (ViewBag.ApiResponseImage != null)
{
    <img src="data:image/png;base64,@ViewBag.ApiResponseImage" alt="Yeni Saç Stili" />
}
